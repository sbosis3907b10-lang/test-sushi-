local keys = {"Q", "E", "R", "F"}
local highlightColor = Color3.fromHex("F5CE52")

while task.wait(0.1) do
    for _, element in pairs(game:GetService("Players").LocalPlayer.PlayerGui:GetDescendants()) do
        if (element:IsA("TextButton") or (element:IsA("TextLabel")) then
            if element.TextColor3 == highlightColor and table.find(keys, element.Text) then
                game:GetService("VirtualInputManager"):SendKeyEvent(true, element.Text, false, game)
                task.wait(0.05)
                game:GetService("VirtualInputManager"):SendKeyEvent(false, element.Text, false, game)
                break
            end
        end
    end
end
